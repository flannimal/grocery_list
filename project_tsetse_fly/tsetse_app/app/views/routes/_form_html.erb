<%= form_for @route do |f| %>
  <%= f.label :starting_point %>
  <%= f.text_field :starting_point, :autofocus => true %>
  <br>
  <%= f.label :end_point %>
  <%= f.text_field :end_point %>
  <br>

  <div class="input-group">
    <% Station.order(:name).each do |station| %>
      <span class="input-group-addon"><%= station.name %>
      <%= check_box_tag 'route[station_ids][]', station.id, station.in?(@route.stations.to_a), {class: "checkbox inline"} %>
      </span>
    <% end %>
  </div>
  <p><p>
  <%= f.submit  class: "btn btn-primary" %>
<% end %>

